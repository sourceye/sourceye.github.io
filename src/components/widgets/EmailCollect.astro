---
import { Icon } from 'astro-icon';
---

<div class="flex w-full flex-col md:flex-row">
  <div class="basis-full md:basis-2/3">
    <input
      class="inset-10 -mb-4 w-full basis-full rounded-t-2xl bg-slate-300 px-6 pt-3 pb-7 text-base font-medium text-gray-800 md:-mr-5 md:rounded-l-2xl md:rounded-tr-none md:py-3 lg:-mr-5"
      placeholder="you@domain.com"
    />
  </div>
  <div class="basis-full md:basis-1/3">
    <button
      class="inline-flex w-full items-center justify-center rounded-2xl bg-primary px-3 py-3 text-base font-medium text-white shadow-md"
      title="Send your email to stay up to date with our progress"
    >
      Follow along
      <Icon name="tabler:send" class="w-5 h-5 -mr-1.5 ml-1" />
    </button>
  </div>
</div>
